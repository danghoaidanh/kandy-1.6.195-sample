<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ui_activity_multi_party_conference_add_invitees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multi_party_conference_invitees_label"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ui_activity_multi_party_conference_add_invitees_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/multi_party_conference_invitees_hint" />

        <LinearLayout
            android:id="@+id/ui_activity_multi_party_conference_invite_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multi_party_conference_invite_by_label"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/ui_activity_multi_party_conference_invite_by_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ui_activity_multi_party_conference_invite_by_chat_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/multi_party_conference_add_invite_chat" />

                <RadioButton
                    android:id="@+id/ui_activity_multi_party_conference_invite_by_sms_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/multi_party_conference_add_invite_sms" />

                <RadioButton
                    android:id="@+id/ui_activity_multi_party_conference_invite_by_email_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/multi_party_conference_add_invite_email" />
            </RadioGroup>

            <Button
                android:id="@+id/ui_activity_multi_party_conference_add_invitees_button"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:background="@drawable/chat_action_btn_selector"
                android:text="@string/multi_party_conference_add_invitees_btn" />
        </LinearLayout>
    </LinearLayout>

     <LinearLayout
        android:id="@+id/ui_activity_multi_party_conference_current_user_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >
        
    <LinearLayout
        android:id="@+id/ui_activity_multi_party_conference_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multi_party_conference_nickname_label"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ui_activity_multi_party_conference_nickname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/multi_party_conference_nickname_hint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_activity_multi_party_conference_start_call_with_video"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multi_party_conference_start_call_with_video_label"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/ui_activity_multi_party_conference_start_call_with_video_toogle"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_activity_multi_party_conference_start_call_with_speaker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multi_party_conference_start_call_with_speaker_label"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/ui_activity_multi_party_conference_start_call_with_speaker_toogle"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </LinearLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/ui_activity_multi_party_conference_start_call_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/chat_action_btn_selector"
        android:text="@string/multi_party_conference_start_call_button" />

     <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/multi_party_conference_current_invitees_label"
            android:textSize="20sp" />
     
     
     <ListView
        android:id="@+id/ui_activity_group_settings_invitees_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />


</LinearLayout>